.back-ground {
    background-color: rgb(247, 241, 227);
    width: 100%;
    height: 100%;
}

.top-bar {
    width: 100%;
    height: 8%;
    background-color: rgb(34, 47, 79);
    flex-direction: row;
    align-items: flex-end;
    position: absolute;
    top: 0;
}

.search-bar {
    background-color: rgb(255, 255, 255);
    width: 40%;
    height: 50%;
    border-top-left-radius: 50px;
    border-top-right-radius: 50px;
    border-bottom-right-radius: 50px;
    border-bottom-left-radius: 50px;
    margin-bottom: 20px;
    margin-left: 20px;
}

.find-icon {
    background-image: url("project://database/Assets/UI/Icons/finded-2.png?fileID=2800000&guid=e7b29dbab780c2c439bb79926e7be181&type=3#finded-2");
